pipeline {
    agent any

    environment {

        LABS = credentials('labcreds')
        VENV_NAME = 'virtual_retail'
    }

    stages {
        stage('Build'){
            steps {
                script {
                    sh 'pip3 install virtualenv'
                    sh 'virtualenv -p /usr/bin/python3 $VENV_NAME'
                    sh '. $VENV_NAME/bin/activate'
                    sh 'pip3 install -r req.txt'
                }
            }
        }

        stage('Test'){
            steps {
                script {
                    sh 'pytest -v'
                }
                echo "Test Successful"
            }
        }

        stage('Package'){
            steps {
                script {
                    sh 'zip -r retail_project.zip .'
                }
                echo "Package Successful"
            }
        }

        stage('Deploy'){
            steps {
                sh "sshpass -p $LABS_PSW scp . $LABS_USR@g02.itversity.com:/home/itv009030/retailproject_CICD"   
                echo "Deploy successful"
                sh "exit"
                echo "Successfull !!"   
            }
        }
    }
}


       