pipeline {
    agent any

    environment {

        LABS = credentials('labcreds')
        VENV_NAME = 'virtual_retail'
    }

    stages {
        stage('Build'){
            steps {
                script {
                    sh 'sudo pip3 install virtualenv'
                    sh 'virtualenv -p /usr/bin/python3 $VENV_NAME'
                    sh 'source $VENV_NAME/bin/activate'
                    sh 'pip3 install -r req.txt'
                }
            }
        }
    }
}


       