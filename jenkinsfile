pipeline {
    agent any

    environment {

        LABS = credentials('labcreds')
        VENV_NAME = 'virtual_retail'
    }

    stages {
        
        stage('build') {
            steps {
                script {
                    sh "pip install --user pipenv"
                }
                echo 'build successful'
            }
        }

        stage('test') {
            steps {
                echo 'test'
            }
        }

        stage('deploy') {
            steps {
                echo 'Deploy'
            }
        }
    }
}
