pipeline {
    agent any

    environment {

        LABS = credentials('labcreds')
        VENV_NAME = 'virtual_retail'
    }

    stages {
        stage('Build'){
            steps {
                script {
                    sh 'apt-get install python3-venv'
                    sh 'python3 -m venv $VENV_NAME'
                    sh 'source $VENV_NAME/bin/activate'
                    sh 'pip3 install -r req.txt'
                }
            }
        }
    }
}


       