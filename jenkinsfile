pipeline {
    agent any

    environment {

        LABS = credentials('labcreds')
        VENV_NAME = 'virtual_retail'
    }

    stages {
        
        stage('Build') {
            steps {
                script {
                    sh "pip install --user pipenv"
                    sh "bitnami/jenkins/home/.local/bin/pipenv install"
                }
                echo 'build successful'
            }
        }

        stage('Test') {
            steps {
                script {
                    sh "pipenv install pytest"
                    sh "bitnami/jenkins/home/.local/bin/pipenv run pytest"
                }
                echo 'Test successful'
        }

        stage('Package') {
            steps {
                sh "zip -r retail_project.zip ."
            }
            echo 'Package successful'
        }

        stage('Deploy')
        {
         sh "sshpass -p $LABS_PSWscp -o StrictHostKeyChecking=no -r .
         $LABS_USR@g02.itversity.com:/home/itv009030/retailproject_CICD"   
        }
    }
}
