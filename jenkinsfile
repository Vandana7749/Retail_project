pipeline {
    agent any

    environment {

        LABS = credentials('labcreds')
        VENV_NAME = 'virtual_retail'
    }

    stages {
        
        stage('Build') {
            steps {
                script {
                    sh "pip install --user pipenv"
                    sh "bitnami/jenkins/home/.local/bin/pipenv --rm || exit 0"
                    sh "bitnami/jenkins/home/.local/bin/pipenv install"                
                    }
                echo 'build successful'
            }
        }

        stage('Test') {
            steps {
                script {
                    sh "bitnami/jenkins/home/.local/bin/pipenv install pytest"
                    sh "bitnami/jenkins/home/.local/bin/pipenv run pytest"
                }
                echo 'Test successful'
            }
        }

        stage('Package') {
            steps {
                sh "zip -r retail_project.zip ."
                echo 'Package successful'
            }
            
        }

        stage('Deploy'){
            steps {
                sh "sshpass -p $LABS_PSW scp . $LABS_USR@g02.itversity.com:/home/itv009030/retailproject_CICD"   
                echo "Deploy successful"
                sh "exit"
                echo "Successfull !!"   
            }
        }
    }
}

